{% trans_default_domain 'FOSUserBundle' %}

<section class="content">
    <div class="row">
        <div class="box box-warning">
            <div class="box-header text-right">
                <a href="{{ absolute_url(path('backend'))}}" class="btn btn-social btn-primary"><i class="fa fa-list"></i>Liste des activit√©s</a>
            </div>
            <div class="box-body">
                <div class="row justify-content-center">
                    <div class="col-6">
                    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
                        <div class="form-group row">
                            <label class="col-sm-4 control-label text-right">Nom Utilisateur</label>
                            <div class="col-sm-8">
                                {{ form_widget(form.username, {'attr':{'class': 'form-control', 'readonly': 'readonly'}})}}
                                <span class="help-block">{{ form_errors(form.username)}}</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 control-label text-right">Nom Utilisateur</label>
                            <div class="col-sm-8">
                                {{ form_widget(form.email, {'attr':{'class': 'form-control', 'readonly': 'readonly'}})}}
                                <span class="help-block">{{ form_errors(form.username)}}</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 control-label text-right">Nom Utilisateur</label>
                            <div class="col-sm-8">
                                {{ form_widget(form.current_password, {'attr':{'class': 'form-control'}})}}
                                <span class="help-block">{{ form_errors(form.username)}}</span>
                            </div>
                        </div>
                        {{ form_widget(form) }}
                        <div class="box-footer">
                            <a href="{{ absolute_url(path("backend")) }}" class="btn btn-default">Annuler</a>
                            <button type="submit" class="btn btn-info pull-right">{{ 'profile.edit.submit'|trans }}</button>
                        </div>
                    {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
