{% trans_default_domain 'FOSUserBundle' %}


<section class="content">
    <div class="row">
        <div class="box box-warning">
            <div class="box-header text-right">
                <a href="{{ absolute_url(path('backend'))}}" class="btn btn-social btn-primary"><i class="fa fa-list"></i>Liste des activit√©s</a>
            </div>
            <div class="box-body">
                <div class="row justify-content-center">
                    <div class="col-6">
                        <div class="form-group row">
                            <label class="col-sm-4 control-label text-right">{{ 'profile.show.username'|trans }}</label>
                            <div class="col-sm-8">
                                <input type="text" value="{{ user.username }}" class="form-control" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 control-label text-right">{{ 'profile.show.email'|trans }}</label>
                            <div class="col-sm-8">
                                <input type="text" value="{{ user.email }}" class="form-control" readonly>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
