{% extends 'backend.html.twig' %}

{% block title %}{{ parent () }} Gestion des candidats{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>Gestion des candidats</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend'))}}"><i class="fa fa-home"></i> Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend_candidat_index'))}}">candidats</a></li>
            <li class="breadcrumb-item active">Liste </li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="box box-warning">
            <div class="box-header text-right">
                <a href="{{ absolute_url(path('backend_candidat_new'))}}" class="btn btn-social btn-primary"><i class="fa fa-plus"></i>Ajouter un candidat</a>
            </div>

            <div class="row">
                {% for candidat in candidats %}
                    <div class="col-md-12 col-lg-3">
                        <!--<div class="box box-default" style="height: 600px">-->
                        <div class="box box-default">
                            <img class="card-img-top img-responsive" src="{{ vich_uploader_asset(candidat, 'imageFile') }}" alt="{{ candidat.pseudo }}">
                            <div class="box-body">
                                    {{ candidat.pseudo }}
                                    <span class="badge badge-success">{{ candidat.code }}</span>
                                </h4>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a href="{{ absolute_url(path('backend_candidat_edit', {'slug': candidat.slug})) }}" >
                                        <button type="button" class="btn btn-primary"><i class="fa fa-edit"></i> Modifier</button>
                                    </a>
                                    <a href="{{ absolute_url(path('backend_candidat_show', {'slug': candidat.slug})) }}" >
                                        <button type="button" class="btn btn-primary"><i class="fa fa-eye"></i> Consulter</button>
                                    </a>
                                </div>
                            </div>

                        </div>
                        <!-- /.box -->
                    </div>
                {% else %}

                {% endfor %}
            </div>

    </section>
{% endblock %}
