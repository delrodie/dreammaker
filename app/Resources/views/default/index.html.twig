            </div>
        </div>
    </section>
    <section><br>
        <div class="auto-container clearfix">
            <a href="{{ absolute_url(path('sdm_index')) }}" title="Cliquez pour acceder à la page de vote">
                <img src="{{ asset('assets/img/bg2.jpg') }}" alt="" class="img-responsive">
            </a>
        </div>
        <br>
        <div class="auto-container clearfix">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <a href="{{ absolute_url(path('sdm_index')) }}" title="Cliquez pour acceder à la page de vote">
                        <button class="btn btn-danger btn-lg">Cliquez pour acceder à la page de vote</button>
                    </a>
                </div>
            </div>
        </div>
    </section>
    <section class="actualite">
        <div class="auto-container">
            {% if (actualites) %}
                <div class="titre-section">
                    <h2>Actualités</h2>
                </div>
            {% endif %}
            <div class="swiper-container">
                <div class="swiper-wrapper articles">
                    {% for actualite in actualites %}
                        {% if (loop.index is divisibleby(2)) %}
                            <div class="swiper-slide wow fadeInDown">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <a href="{{ absolute_url(path('frontend_actualite_show',{'slug': actualite.slug})) }}">
                                            <!--<img src="{{ vich_uploader_asset(actualite, 'imageFile') }}" alt="">-->
                                            <img src="{{ asset('uploads/actualite/'~ actualite.imageName) | imagine_filter('actualite_accueil') }}" alt="{{ actualite.titre }}"  class="img-responsive"/>
                                        </a>
                                    </div>
                                    <div class="col-sm-12">
                                        <h4><a href="{{ absolute_url(path('frontend_actualite_show',{'slug': actualite.slug})) }}">{{ actualite.titre }}</a></h4>
                                        <p class="text">
                                            {{ actualite.resume|raw }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="swiper-slide wow fadeInLeft">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <a href="{{ absolute_url(path('frontend_actualite_show',{'slug': actualite.slug})) }}">
                                            <img src="{{ asset('uploads/actualite/'~ actualite.imageName) | imagine_filter('actualite_accueil') }}" alt="{{ actualite.titre }}"  class="img-responsive"/>
                                        </a>
                                    </div>
                                    <div class="col-sm-12">
                                        <h4><a href="{{ absolute_url(path('frontend_actualite_show',{'slug': actualite.slug})) }}">{{ actualite.titre }}</a></h4>
                                        <p class="text">
                                            {{ actualite.resume|raw }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                    {% endfor %}

                </div>

                <div class="swiper-pagination"></div>
            </div>
        </div>
    </section>
    {% if (artistes) %}
        <section class="our-team">
            <div class="auto-container">
                <div class="titre-section">
                    <h2>Nos artistes</h2>
                </div>

                <div class="row clearfix">

                    {% for artiste in artistes %}
                        {% if (loop.index is not divisibleby(2)) %}
                            <div class="col-md-3 col-sm-6 col-xs-6">
                                <article class="member wow fadeInRight" data-wow-delay="0s" data-wow-duration="1s" data-wow-offset="0">
                                    <figure class="ressources/image">
                                        <a href="{{ absolute_url(path('frontend_label_artiste', {'slug': artiste.slug})) }}">
                                            <img src="{{ asset('uploads/artiste/'~ artiste.imageName) | imagine_filter('artiste_accueil') }}" alt="{{ artiste.pseudonyme }}"  class="img-responsive"/>
                                        </a>
                                        <span class="curve"></span>
                                    </figure>
                                    <div class="content">
                                        <ul class="social-links">
                                            {% if (artiste.facebook) %}
                                                <li><a class="fa fa-facebook-f" href="https://facebook.com/{{ artiste.facebook }}" target="_blank" title="Suivre {{ artiste.pseudonyme }} sur Facebook"></a></li>
                                            {% endif %}
                                            {% if (artiste.twitter) %}
                                                <li><a class="fa fa-twitter" href="https://twitter.com/{{ artiste.twitter }}" title="Suivre {{ artiste.pseudonyme }} sur Twitter"></a></li>
                                            {% endif %}
                                            {% if (artiste.instagram) %}
                                                <li><a class="fa fa-instagram" href="https://instagram.com/{{ artiste.instagram }}" title="Suivre {{ artiste.pseudonyme }} sur Instagram" target="_blank"></a></li>
                                            {% endif %}
                                            {% if (artiste.youtube) %}
                                                <li><a class="fa fa-youtube" href="https://youtube.com/{{ artiste.youtube }}" title="Suivre {{ artiste.pseudonyme }} sur Youtube" target="_blank"></a></li>
                                            {% endif %}
                                            {% if (artiste.website) %}
                                                <li><a class="fa fa-globe" href="{{ artiste.website }}" title="{{ artiste.pseudonyme }}" target="_blank"></a></li>
                                            {% endif %}
                                            {% if (artiste.email) %}
                                                <li><a class="fa fa-envelope" href="mailto:{{ artiste.email }}" title="Envoyer un email à {{ artiste.pseudonyme }}"></a></li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                </article>
                            </div>
                        {% else %}
                            <div class="col-md-3 col-sm-6 col-xs-6">
                                <article class="member wow fadeInDown" data-wow-delay="0s" data-wow-duration="1s" data-wow-offset="0">
                                    <figure class="ressources/image">
                                        <a href="{{ absolute_url(path('frontend_label_artiste', {'slug': artiste.slug})) }}">
                                            <img src="{{ asset('uploads/artiste/'~ artiste.imageName) | imagine_filter('artiste_accueil') }}" alt="{{ artiste.pseudonyme }}"  class="img-responsive"/>
                                        </a>
                                        <span class="curve"></span>
                                    </figure>
                                    <div class="content">
                                        <ul class="social-links">
                                            {% if (artiste.facebook) %}
                                                <li><a class="fa fa-facebook-f" href="https://facebook.com/{{ artiste.facebook }}" target="_blank" title="Suivre {{ artiste.pseudonyme }} sur Facebook"></a></li>
                                            {% endif %}
                                            {% if (artiste.twitter) %}
                                                <li><a class="fa fa-twitter" href="https://twitter.com/{{ artiste.twitter }}" title="Suivre {{ artiste.pseudonyme }} sur Twitter"></a></li>
                                            {% endif %}
                                            {% if (artiste.instagram) %}
                                                <li><a class="fa fa-instagram" href="https://instagram.com/{{ artiste.instagram }}" title="Suivre {{ artiste.pseudonyme }} sur Instagram" target="_blank"></a></li>
                                            {% endif %}
                                            {% if (artiste.youtube) %}
                                                <li><a class="fa fa-youtube" href="https://youtube.com/{{ artiste.youtube }}" title="Suivre {{ artiste.pseudonyme }} sur Youtube" target="_blank"></a></li>
                                            {% endif %}
                                            {% if (artiste.website) %}
                                                <li><a class="fa fa-globe" href="{{ artiste.website }}" title="{{ artiste.pseudonyme }}" target="_blank"></a></li>
                                            {% endif %}
                                            {% if (artiste.email) %}
                                                <li><a class="fa fa-envelope" href="mailto:{{ artiste.email }}" title="Envoyer un email à {{ artiste.pseudonyme }}"></a></li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                </article>
                            </div>
                        {% endif %}
                    {% endfor %}

                </div>
                <div class="lire-suite text-right">
                    <h3><a href="{{ absolute_url(path('frontend_label_index')) }}" >&raquo; Voir tous les artistes</a></h3>
                </div>
            </div>
        </section>
    {% endif %}

    {% if (events) %}
        <section class="successfull-stories curved-carousel event">
            <div class="auto-container">
                <div class="titre-section">
                    <h2>Showbiz Event</h2>
                </div>
            </div>
            <div class="row slider">
                {% for event in events %}
                    <article class="slide-item">
                        <div class="auto-container">
                            <div class="text-side">
                                <div class="sec-title">
                                    <a href="{{ absolute_url(path('frontend_event_show',{'slug': event.slug})) }}"><h2>{{ event.titre }}</h2></a>

                                </div>
                                <div class="sec-text">
                                    <p>{{ event.resume|raw }}</p>
                                </div>
                            </div>

                            <figure class="image-box">
                                <div class="image-layer" style="background-image:url({{ vich_uploader_asset(event, 'imageFile') }});"></div>
                            </figure>
                        </div>
                    </article>
                {% endfor %}

            </div>
        </section>
    {% endif %}

{% endblock %}


