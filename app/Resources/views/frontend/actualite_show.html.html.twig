{% extends 'base.html.twig' %}

{% block title %}{{ actualite.titre }}{% endblock %}

{% block body %}
	<section class="page-banner" style="background-image:url({{ absolute_url(asset('ressources/images/bg/bg-page.jpg')) }});">
		<div class="auto-container">
			<h1>Les actualités</h1>
		</div>
	</section>
	<section id="blog" class="blog section">
		<div class="auto-container">
			<div class="row">
				<div class="col-md-8">
					<div class="post-item">
						<h2 class="wow fadeInLeft">{{ actualite.titre }}</h2>
						<div class="post wow fadeInUp">
							<!-- Image -->
							<img class="img-responsive" src="{{ asset('uploads/actualite/'~ actualite.imageName) | imagine_filter('page_img') }}" alt="{{ actualite.titre }}" />
							<div class="post-content wow fadeInUp">
								<!-- Meta -->
								<div class="posted-date">{{ actualite.publieLe|date('d M Y') }}</div>
								{{ actualite.contenu|raw }}
								<br><br>
								<div class="sharethis-inline-share-buttons"></div>
							</div>
							<p></p>
							<div class="col-md-12 pull-right text-right">
								<a href="{{ absolute_url(path('frontend_actualite_index')) }}" title="Retour aux actualités"><i class="fa fa-reply"></i> Retour aux actualités</a>
							</div>

						</div>

					</div><!-- End Post -->

					<div class="post-comments">
						<div class="title-head wow fadeInUp"></div>
						<ul class="comment-list">
							<div class="fb-comments" data-href="{{ absolute_url(path('frontend_actualite_show',{'slug': actualite.slug})) }}" data-numposts="5"></div>
						</ul>
					</div>


				</div>


				<div class="col-md-4">

					<div class="sidebar">

						{{ render(url('frontend_bloc_droit')) }}
					</div>

				</div><!-- Blog Sidebar Ends -->

			</div>
			<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
			<!-- annonce728x90 -->
			<ins class="adsbygoogle"
				 style="display:inline-block;width:728px;height:90px"
				 data-ad-client="ca-pub-9362330925767613"
				 data-ad-slot="7445097797"></ins>
			<script>
                (adsbygoogle = window.adsbygoogle || []).push({});
			</script>
		</div>
	</section>

{% endblock %}
{% block meta %}
	<meta name="keywords" content="{{ actualite.tags|join(', ') }}"  />
	<meta name="description" content="{{ actualite.resume|raw }}" />
	<meta name="revisit" content="7 days" />
	<meta name="revisit-after" content="7 days">
	<meta name="Author" content="Dream Maker, Delrodie AMOIKON">
	<meta name="Copyright" content="www.dreammaker-ci.com">
	<meta name="Content-Language" content="FR">
	<meta name="distribution" content="global" />
	<meta name="Audience" content="All" />
	<meta name="Robots" content="full">

	<link rel="canonical" href="{{ absolute_url(path('frontend_actualite_show',{'slug': actualite.slug})) }}" />
	<meta property="og:locale" content="fr_FR" />
	<meta property="og:type" content="Item" />
	<meta property="og:title" content="{{ actualite.titre }}" />
	<meta property="og:description" content="{{ actualite.resume|raw }}" />
	<meta property="og:url" content="{{ absolute_url(path('frontend_actualite_show',{'slug': actualite.slug})) }}" />
	<meta property="og:site_name" content="Dream Maker CI" />
	<meta property="article:section" content="Item" />
	<meta property="article:published_time" content="{{ actualite.publieLe|date('Y-m-d') }}T{{ actualite.publieLe|date('H:i:s') }}+00:00" />
	<meta property="article:modified_time" content="{{ actualite.modifieLe|date('Y-m-d') }}T{{ actualite.modifieLe|date('H:i:s') }}+00:00" />
	<meta property="og:updated_time" content="{{ actualite.modifieLe|date('Y-m-d') }}T{{ actualite.modifieLe|date('H:i:s') }}+00:00" />
	<meta property="og:image" content="{{ absolute_url(vich_uploader_asset(actualite, 'imageFile')) }}" />
	<meta name="twitter:card" content="summary"/>
	<meta name="twitter:description" content="{{ actualite.resume|raw }}"/>
	<meta name="twitter:title" content="{{ actualite.titre }}"/>
	<meta name="twitter:domain" content="DREAM MAKER"/>
	<meta name="twitter:image:src" content="{{ absolute_url(vich_uploader_asset(actualite, 'imageFile')) }}"/>
	<script type="application/ld+json">
		{
			"@context": "http://schema.org",
			"@type": "NewsArticle",
			"mainEntityOfPage": {
				"@type": "WebPage",
				"@id": "{{ absolute_url(path('frontend_actualite_show',{'slug': actualite.slug})) }}"
			},
			"headline": "{{ actualite.titre }}",
			"image": [
				"{{ absolute_url(vich_uploader_asset(actualite, 'imageFile')) }}",
				"{{ absolute_url(vich_uploader_asset(actualite, 'imageFile')) }}"
			],
			"datePublished": "{{ actualite.publieLe|date('Y-m-d') }}T{{ actualite.publieLe|date('H:i:s') }}+00:00",
			"dateModified": "{{ actualite.modifieLe|date('Y-m-d') }}T{{ actualite.modifieLe|date('H:i:s') }}+00:00",
			"author": {
				"@type": "Person",
				"name": "Delrodie AMOIKON"
			},
			"publisher": {
				"@type": "Organization",
				"name": "DREAM MAKER :: Maison de distribution, production et de communication événementielle",
				"logo": {
					"@type": "ImageObject",
					"url": "{{ absolute_url(asset('ressources/images/logo-02.png')) }}"
				}
			},
			"description": "{{ actualite.resume|raw }}"
		}
	</script>

	<script type="application/ld+json">
		{
			"@context": "http://schema.org",
			"@type": "Organization",
			"url": "{{ absolute_url(path('homepage')) }}",
			"contactPoint": [{
				"@type": "ContactPoint",
				"telephone": "+225 58 99 99 79",
				"contactType": "Direction",
				"contactOption": "TollFree",
				"areaServed": "FR"
			},{
				"@type": "ContactPoint",
				"telephone": "+225 58 99 99 79",
				"contactType": "Direction",
				"contactOption": "TollFree",
				"areaServed": [
					"CI",
					"FR"
				],
				"availableLanguage": [
					"French",
					"English"
				]
			}]
		}
	</script>
{% endblock %}

{% block adsense %}
	<script>
        (adsbygoogle = window.adsbygoogle || []).push({
            google_ad_client: "ca-pub-9362330925767613",
            enable_page_level_ads: true
        });
	</script>
{% endblock %}

