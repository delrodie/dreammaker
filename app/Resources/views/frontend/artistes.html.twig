{% extends 'base.html.twig' %}

{% block title %}Liste de nos artistes {% endblock %}

{% block body %}
 <section class="page-banner" style="background-image:url({{ absolute_url(asset('ressources/images/bg/bg-page.jpg')) }});">
  <div class="auto-container">
   <h1>Nos artistes</h1>
  </div>
 </section>
 <section id="blog" class="blog section">
  <div class="auto-container">
   <div class="row">
    <div class="col-md-8">
     <section class="our-team trainers">
      <div class="auto-container">
       <div class="sec-title">
        <h2>Nos artistes</h2>
       </div>

       <div class="row clearfix">
        {% for artiste in artistes %}
         <div class="col-md-4 col-sm-6 col-xs-12">
          <article class="member wow fadeInLeft" data-wow-delay="0s" data-wow-duration="1s" data-wow-offset="0">
           <figure class="ressources/image">
            <a href="{{ absolute_url(path('frontend_label_artiste',{'slug': artiste.slug})) }}">
             <img src="{{ asset('uploads/artiste/'~ artiste.imageName) | imagine_filter('artiste_accueil') }}" alt="{{ artiste.pseudonyme }}" title="" class="img-responsive">
            </a>
            <span class="curve"></span>
           </figure>
           <div class="content">
            <ul class="social-links">
                {% if artiste.facebook %}
                    <li><a class="fa fa-facebook-f" href="https://www.facebook.com/{{ artiste.facebook }}" target="_blank"></a></li>
                {% endif %}
                {% if artiste.twitter %}
                    <li><a class="fa fa-twitter" href="https://www.twitter.com/{{ artiste.twitter }}" target="_blank"></a></li>
                {% endif %}
                {% if artiste.youtube %}
                    <li><a class="fa fa-youtube" href="https://www.youtube.com/{{ artiste.youtube }}" target="_blank"></a></li>
                {% endif %}
                {% if artiste.instagram %}
                    <li><a class="fa fa-instagram" href="https://www.instagram.com/{{ artiste.instagram }}" target="_blank"></a></li>
                {% endif %}
                {% if artiste.email %}
                    <li><a class="fa fa-envelope" href="mailto:{{ artiste.email }}"></a></li>
                {% endif %}
            </ul>
           </div>
          </article>
         </div>
        {% endfor %}

       </div>
      </div>
     </section>


    </div>


    <div class="col-md-4">

     <div class="sidebar">
       {{ render(url('frontend_bloc_droit')) }}
     </div>

    </div>

   </div>

  </div>
 </section>
{% endblock %}

{% block adsense %}
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({
            google_ad_client: "ca-pub-9362330925767613",
            enable_page_level_ads: true
        });
    </script>
{% endblock %}

