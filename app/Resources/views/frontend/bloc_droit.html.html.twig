{% if (events) %}
	<div class="blog/popular-post widget wow fadeInUp">
		<h2>Showbiz'Event</h2>
		<ul class="popular-list">
			{% for event in events %}
				<li>
					<a href="#"><img src="{{ asset('uploads/event/'~ event.imageName) | imagine_filter('event_mini') }}" alt="" class="img-responsive"/></a>
					<div class="content">
						<h3><a href="#">{{ event.titre }}</a></h3>
						<div class="posted-date">{{ event.dateEvent|date('d M Y') }}</div>
					</div>
				</li>
			{% endfor %}
		</ul>
	</div>
{% endif %}

