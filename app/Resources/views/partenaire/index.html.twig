{% extends 'backend.html.twig' %}

{% block title %}{{ parent () }} Gestion des partenaires{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>Gestion des partenaires</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend'))}}"><i class="fa fa-home"></i> Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend_partenaire_index'))}}">partenaires</a></li>
            <li class="breadcrumb-item active">Liste </li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="box box-warning">
            <div class="box-header text-right">
                <a href="{{ absolute_url(path('backend_partenaire_new'))}}" class="btn btn-social btn-primary"><i class="fa fa-plus"></i>Ajouter un partenaire</a>
            </div>

            <div class="row">
                {% for partenaire in partenaires %}
                    <div class="col-md-12 col-lg-3">
                        <div class="box box-default" style="height: 300px">
                            <img class="card-img-top img-responsive" src="{{ vich_uploader_asset(partenaire, 'imageFile') }}" alt="{{ partenaire.nom }}">
                            <div class="box-body">
                                <h4 class="card-title">
                                    {% if partenaire.statut %}
                                        <span class="badge badge-success">Actif</span>
                                    {% else %}
                                        <span class="badge badge-danger">DÃ©sactivÃ©</span>
                                    {% endif %}
                                    {{ partenaire.nom }}
                                </h4>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a href="{{ absolute_url(path('backend_partenaire_edit', {'slug': partenaire.slug})) }}" >
                                        <button type="button" class="btn btn-primary"><i class="fa fa-edit"></i> Modifier</button>
                                    </a>
                                </div>
                            </div>

                        </div>
                        <!-- /.box -->
                    </div>
                {% else %}

                {% endfor %}
            </div>

    </section>
{% endblock %}
